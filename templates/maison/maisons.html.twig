{% extends 'base.html.twig' %}

{% block title %}maisons{% endblock %}

{% block body %}
<header class="container-fluid p-5 text-center bg-light">
    <h1>SUBL'IMMO - TOUTES LES maisons</h1>
</header>
<main class="container-fluid p-5">

    <div class="row">
        {% for maison in maisons|reverse %} 
   <div class="col-6 p-3">
       <div class="card">
           <img src="{{ asset('img/maison/' ~ maison.img1) }}" class="card-img-top " alt="Maison d'{{ maison.title }}">
           <div class="card-body">
               <h5 class="card-title">{{ maison.title }}</h5>
               <p class="card-text">{{ maison.description|u.truncate(75, '...', false) }}</p>
           </div>
           <ul class="list-group list-group-flush">
               <li class="list-group-item">Surface : {{ maison.surface }}</li>
               <li class="list-group-item">Pièces : {{ maison.rooms }} dont {{ maison.bedrooms }} chambre(s)</li>
               <li class="list-group-item">Prix estimé : {{ maison.price|number_format(0, ',', ' ') }} €</li>
           </ul>
           <div class="card-body text-center">
               <a href="#" class="btn btn-secondary">Voir tout</a>
           </div>
       </div>
   </div>
    
       {% endfor %}

    </div>

</main>

{% endblock %}
